#include "main.h"
/**
 * _abs - Entry point
 *
 * Description: 'A program that returns absolute value of integer n'
 *
 * Return: Always 0 (Success)
 *
 * @n: The number to check
 */

int _abs(int n)
{
	if (n > 0)
	{
		return (n);
	}
	else if (n == 0)
	{
		return (0);
	}
	else
	{
		return n * -1;
	}

}
